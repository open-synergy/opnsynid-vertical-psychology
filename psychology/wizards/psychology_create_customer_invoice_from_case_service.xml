<openerp>
<data>
<record
            id="psychology_create_invoice_from_case_service_action_view_form"
            model="ir.ui.view"
        >
    <field name="name">psychology.create_customer_invoice_from_case_service form</field>
    <field name="model">psychology.create_customer_invoice_from_case_service</field>
    <field name="arch" type="xml">
        <form>
            <group name="group_1" colspan="4" col="2">
                <field name="case_id" />
                <field name="date_invoice" />
                <field
                            name="service_ids"
                            nolabel="1"
                            colspan="2"
                            domain="[('case_id','=',case_id),('invoice_state','=','2binvoiced')]"
                        />
              </group>
              <footer>
                  <button
                            name="action_create_invoice"
                            string="Create Invoice"
                            type="object"
                            class="oe_highlight"
                        />
                  <button string="Cancel" special="cancel" />
              </footer>
        </form>
    </field>
</record>

<record
            id="psychology_create_invoice_from_case_service_action_action"
            model="ir.actions.act_window"
        >
    <field name="name">Create Customer Invoice From Service</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">psychology.create_customer_invoice_from_case_service</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>
</data>
</openerp>

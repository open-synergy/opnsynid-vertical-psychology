<openerp>
<data>
<record id="psychology_case_type_view_search" model="ir.ui.view">
    <field name="name">psychology.case_type form</field>
    <field name="model">psychology.case_type</field>
    <field name="arch" type="xml">
        <search>
            <field name="name" />
            <field name="code" />
        </search>
    </field>
</record>

<record id="psychology_case_type_view_tree" model="ir.ui.view">
    <field name="name">psychology.case_type tree</field>
    <field name="model">psychology.case_type</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name" />
            <field name="code" />
        </tree>
    </field>
</record>

<record id="psychology_case_type_view_form" model="ir.ui.view">
    <field name="name">psychology.case_type form</field>
    <field name="model">psychology.case_type</field>
    <field name="arch" type="xml">
        <form>
            <header />
            <sheet>
                <div
                            class="oe_right oe_button_box"
                            style="width: 300px;"
                            name="buttons"
                        />
                <group name="group_1" colspan="4" col="2">
                    <field name="name" />
                    <field name="code" />
                    <field name="active" />
                </group>
                <notebook>
                    <page name="case" string="Case Configuration">
                        <group name="case_general" colspan="4" col="2">
                            <field
                                        name="case_sequence_id"
                                        domain="[('code','=','psychology.case')]"
                                        string="Sequence"
                                    />
                        </group>
                        <group
                                    name="case_psychologist"
                                    colspan="4"
                                    col="2"
                                    string="Allowed Psychologist"
                                >
                            <field
                                        name="allowed_psychologist_ids"
                                        nolabel="1"
                                        colspan="2"
                                    />
                        </group>
                        <group
                                    name="case_workflow"
                                    colspan="4"
                                    col="2"
                                    string="Workflow"
                                >
                            <field
                                        name="psychology_case_confirm_grp_ids"
                                        string="Allow to Confirm"
                                        widget="many2many_tags"
                                    />
                            <field
                                        name="psychology_case_restart_approval_grp_ids"
                                        string="Allow to Restart Approval"
                                        widget="many2many_tags"
                                    />
                            <field
                                        name="psychology_case_start_grp_ids"
                                        string="Allow to Start"
                                        widget="many2many_tags"
                                    />
                            <field
                                        name="psychology_case_finish_grp_ids"
                                        string="Allow to Close"
                                        widget="many2many_tags"
                                    />
                            <field
                                        name="psychology_case_cancel_grp_ids"
                                        string="Allow to Cancel"
                                        widget="many2many_tags"
                                    />
                            <field
                                        name="psychology_case_restart_grp_ids"
                                        string="Allow to Restart"
                                        widget="many2many_tags"
                                    />
                            <field
                                        name="psychology_case_out_invoice_grp_ids"
                                        string="Allow to Create Customer Invoice From Service"
                                        widget="many2many_tags"
                                    />
                            <field
                                        name="psychology_case_in_invoice_grp_ids"
                                        string="Allow to Create Supplier Invoice From Activity"
                                        widget="many2many_tags"
                                    />
                        </group>
                    </page>
                    <page name="service" string="Services Configuration">
                        <group name="service_general" colspan="4" col="2">
                            <field
                                        name="service_sequence_id"
                                        domain="[('code','=','psychology.service')]"
                                        string="Sequence"
                                    />
                        </group>
                        <group
                                    name="service_allowed_product"
                                    string="Allowed Products"
                                    colspan="4"
                                    col="2"
                                >
                            <field
                                        name="service_allowed_product_ids"
                                        colspan="2"
                                        nolabel="1"
                                    />
                        </group>
                        <group
                                    name="service_allowed_product_categ"
                                    string="Allowed Product Categories"
                                    colspan="4"
                                    col="2"
                                >
                            <field
                                        name="service_allowed_product_categ_ids"
                                        colspan="2"
                                        nolabel="1"
                                    />
                        </group>
                        <group
                                    name="service_accounting"
                                    colspan="4"
                                    col="2"
                                    string="Accounting"
                                >
                            <field
                                        name="receivable_journal_id"
                                        string="Receivable Journal"
                                    />
                            <field
                                        name="receivable_account_id"
                                        string="Receivable Account"
                                    />
                        </group>
                        <group
                                    name="service_pricelist"
                                    colspan="4"
                                    col="2"
                                    string="Pricelist"
                                >
                            <field
                                        name="service_pricelist_id"
                                        string="Default Pricelist"
                                        domain="[('type','=','psi.service')]"
                                    />
                        </group>
                        <group
                                    name="service_workflow"
                                    colspan="4"
                                    col="2"
                                    string="Workflow"
                                >
                            <field
                                        name="psychology_service_start_grp_ids"
                                        string="Allow to Start"
                                        widget="many2many_tags"
                                    />
                            <field
                                        name="psychology_service_finish_grp_ids"
                                        string="Allow to Finish"
                                        widget="many2many_tags"
                                    />
                            <field
                                        name="psychology_service_cancel_grp_ids"
                                        string="Allow to Cancel"
                                        widget="many2many_tags"
                                    />
                            <field
                                        name="psychology_service_restart_grp_ids"
                                        string="Allow to Restart"
                                        widget="many2many_tags"
                                    />
                            <field
                                        name="psychology_service_unlink_invoice_grp_ids"
                                        string="Allow to Delete Customer Invoice"
                                        widget="many2many_tags"
                                    />
                        </group>
                    </page>
                    <page name="activity" string="Activity Configuration">
                        <group name="activity_general" colspan="4" col="2">
                            <field
                                        name="activity_sequence_id"
                                        domain="[('code','=','psychology.activity')]"
                                        string="Sequence"
                                    />
                        </group>
                        <group
                                    name="activity_allowed_product"
                                    string="Allowed Products"
                                    colspan="4"
                                    col="2"
                                >
                            <field
                                        name="activity_allowed_product_ids"
                                        colspan="2"
                                        nolabel="1"
                                    />
                        </group>
                        <group
                                    name="activity_allowed_product_categ"
                                    string="Allowed Product Categories"
                                    colspan="4"
                                    col="2"
                                >
                            <field
                                        name="activity_allowed_product_categ_ids"
                                        colspan="2"
                                        nolabel="1"
                                    />
                        </group>
                        <group
                                    name="activity_pricelist"
                                    colspan="4"
                                    col="2"
                                    string="Pricelist"
                                >
                            <field
                                        name="activity_pricelist_id"
                                        string="Default Pricelist"
                                        domain="[('type','=','psi.activity')]"
                                    />
                        </group>
                        <group
                                    name="activity_workflow"
                                    colspan="4"
                                    col="2"
                                    string="Workflow"
                                >
                            <field
                                        name="psychology_activity_start_grp_ids"
                                        string="Allow to Start"
                                        widget="many2many_tags"
                                    />
                            <field
                                        name="psychology_activity_finish_grp_ids"
                                        string="Allow to Finish"
                                        widget="many2many_tags"
                                    />
                            <field
                                        name="psychology_activity_cancel_grp_ids"
                                        string="Allow to Cancel"
                                        widget="many2many_tags"
                                    />
                            <field
                                        name="psychology_activity_restart_grp_ids"
                                        string="Allow to Restart"
                                        widget="many2many_tags"
                                    />
                            <field
                                        name="psychology_activity_unlink_invoice_grp_ids"
                                        string="Allow to Delete Supplier Invoice"
                                        widget="many2many_tags"
                                    />
                        </group>
                    </page>
                    <page name="note" string="Note">
                        <field name="note" />
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

<record id="psychology_case_type_action" model="ir.actions.act_window">
    <field name="name">Case Types</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">psychology.case_type</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
            id="psychology_case_type_menu"
            name="Types"
            parent="psychology_case_configuration_menu"
            action="psychology_case_type_action"
            sequence="1"
        />
</data>
</openerp>
